<div ng-app="app">
  <div ng-controller="adminCtrl" ng-init="setup()">
    <% @users.each_slice(3) do |three_users| %>
    <div class="row">
      <% three_users.each do |user| %>
        <div class="col-md-4">
          <div class="well">
            <div class="user_single">
              <h3 class="user_header"><%= user.first_name %> <%= user.last_name %></h3>
              <hr>
              <p>Email: <%= user.email %></p>
              <%= label_tag :user_type %>
              <%= text_field_tag :user, user.user_type %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% end %> 
  </div>
</div>