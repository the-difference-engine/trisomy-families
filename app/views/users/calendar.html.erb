<div ng-app="app">
  <div ng-controller="calendarCtrl" ng-init="setUp()">
    <hr style="width: 0px"> 
    <div class="row" id="calendar">
      <div ui-calendar="uiConfig.calendar" class="span8 calendar" ng-model="eventSources"></div>
    </div>

    <% if user_signed_in? && current_user.user_type == "admin" %>

        <div class="col-md-6 col-md-offset-3" style="display:none" id="event_creator">
          <h2>Create Event</h2>

          <div uib-alert ng-repeat="alert in alerts" ng-class="'alert-' + (alert.type || 'warning')" close="closeAlert($index)" dismiss-on-timeout="8000">{{alert.msg}}</div>

          <form>
            <div class="form-group">
              <label for="eventTitle">Title</label>
              <input type="text" class="form-control" id="eventTitle" ng-model="event.title">

              <label for="eventDescription">Description</label>
              <textarea class="form-control" rows="3" id="eventDescription" ng-model="event.description" ></textarea>

              <label for="eventLocation">Location</label>
              <input type="text" class="form-control" id="eventLocation" ng-model="event.location">

              <label for="eventStart">Start Datetime</label>
              <input type="datetime-local" class="form-control" id="eventStart" ng-model="event.start">

              <label for="eventEnd">End Datetime</label>
              <input type="datetime-local" class="form-control" id="eventEnd" ng-model="event.end">

              <label for="ngvalueselect">Event Type</label>
              <select class="form-control" name="ngvalueselect" id="eventType" ng-model="event.event_type">
                <option value="birthdays">Birthday</option>
                <option value="fundrasier">Fundraiser</option>
                <option value="family">Family</option>
                <option value="personal">Personal</option>
              </select>

              <label for="ngvalueselect">All Day</label>
              <select class="form-control" name="ngvalueselect" id="eventAllDay" ng-model="event.allDay">
                <option value="true">Yes</option>
                <option value="false">No</option>
              </select>

              <button type="submit" class="btn btn-primary" id="createEvent" ng-click="createEvent()">Add</button>
            </div>
          </form>
        </div>
    <% end %>
  </div>
</div>
<script>
</script>

