<% if @physician.errors.any?%>
<div id="error_explanation" class="alert alert-danger" role="alert">
   <%= pluralize(@physician.errors.count, "Error") %>
   <ul>
      <% @physician.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
   </ul>
</div>
<% end %>
<div class="container">
   <div class="row">
      <div class="col-md-6 col-md-offset-3">
         <h1 class="text-center">Physician Profile</h1>
         <p class="text-center">Add a member to your family dashboard.</p>
         <hr>
         <%= form_for @physician, url: {action: "create_profile"} do |f| %>
         <h5 style="color:gray">Basic Info</h5>
         <div class="form-group">
            <%= f.label :first_name, "* Full Name" %>
            <%= f.text_field(:first_name, class: "form-control", placeholder: 'First Name') %>
         </div>
         <div class="form-group">
            <%= f.text_field(:last_name, class: "form-control", placeholder: 'Last Name') %>
         </div>
         <div class="form-group">
            <%= f.label :phone_number %>
            <%= f.text_field(:phone_number, class: "form-control") %>
         </div>



         <hr>
         <h5 style="color:gray">Location</h5>
                  <div class="form-group">
            <%= f.label :address, "* Address" %>
            <%= f.text_field(:address, class: "form-control")%>
         </div>
         <div class="form-group">
            <%= f.label :state, 'State' %>
            <%= f.select("state", options_for_select(us_states, @physician.state), class: "form-control") %>
         </div>
         <div class="form-group">
            <%= f.label :city, '* City' %>
            <%= f.text_field(:city, class: "form-control")%>
         </div>
         <hr>
         <div class="form-group">
            <%= f.label :zip_code, '* Zip Code' %>
            <%= f.text_field(:zip_code, class: "form-control")%>
         </div>
         <div class="form-group">
            <%= f.label :website, '* Website' %>
            <%= f.text_field(:website, class: "form-control")%>
         </div>
         <div class="form-group">
            <%= f.label :speciality, '* Specialty' %>
            <%= f.text_field(:speciality, class: "form-control")%>
         </div>
         <%= submit_tag 'Create', class: "btn btn-success btn-lg btn-block"%>
      <% end %>
      </div>
      <!-- col-md-6 -->
   </div>
   <!-- row -->
</div>
<!-- container -->
