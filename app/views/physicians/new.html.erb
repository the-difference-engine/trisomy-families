<% if @physician.errors.any?%>
<div id="error_explanation" class="alert alert-danger" role="alert">
   <%= pluralize(@physician.errors.count, "Error") %>
   <ul>
      <% @physician.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
   </ul>
</div>
<% end %>
<div class="container">
   <div class="row">
      <div class="col-md-6 col-md-offset-3">
         <h1 class="text-center">Physician Profile</h1>
         <p class="text-center">Create a profile:</p>
         <hr>
         <%= form_for @physician, url: {action: "create"} do |f| %>
         <h5 style="color:gray">Personal Info</h5>
         <div class="form-group">
            <span class="required">* </span><%= f.label :first_name, " Full Name" %>
            <%= f.text_field(:first_name, class: "form-control", value: current_user.first_name) %>
         </div>
         <div class="form-group">
            <%= f.text_field(:last_name, class: "form-control", value: current_user.last_name) %>
         </div>
         <div class="form-group">
            <%= f.label :personal_number %>
            <%= f.text_field(:personal_number, class: "form-control") %>


            <%= f.radio_button(:primary_phone_public, true) %> Public
            <%= f.radio_button(:primary_phone_public, false) %> Private
         </div>



         <hr>
         <h5 style="color:gray">Practice Info</h5>
         <div class="form-group">
            <span class="required">* </span><%= f.label :address, "Address" %>
            <%= f.text_field(:address, class: "form-control")%>

         </div>

         <div class="form-group">
            <span class="required">* </span>Office Phone Number
            <%= f.text_field(:phone_number, class: "form-control") %>
         </div>
         <div class="form-group">
         <span class="required">* </span><%= f.label :state, "State" %><br>
            <%= f.select("state", options_for_select(us_states, @physician.state), class: "form-control") %>
         </div>

         <div class="form-group">
            <span class="required">* </span><%= f.label :city, 'City' %>
            <%= f.text_field(:city, class: "form-control")%>
         </div>
         <div class="form-group">
            <span class="required">* </span><%= f.label :zip_code, 'Zip Code' %>
            <%= f.text_field(:zip_code, class: "form-control")%>
         </div>

         <hr>
         <div class="form-group">
            <%= f.label :website, 'Website' %>
            <%= f.text_field(:website, class: "form-control")%>
         </div>
         <div class="form-group">
            <span class="required">* </span><%= f.label :specialty, 'Specialty' %>
            <%= f.text_field(:specialty, class: "form-control")%>
         </div>
         <div class="form-group">
            <%= f.hidden_field(:user_id, value: current_user.id, class: "form-control")%>
         </div>
         <%= submit_tag 'Create', class: "btn btn-success btn-lg btn-block"%>
      <% end %>
      </div>
      <!-- col-md-6 -->
   </div>
   <!-- row -->
</div>
<!-- container -->
