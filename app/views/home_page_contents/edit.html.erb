         <%= f.label :banner_text, "Banner Text" %>
         <%= f.text_area :banner_text, class: "form-control" %>
      </div>
      <div class="form-group">
         <%= f.label :banner_image, "Banner Image" %><span style="display:inline-block; width: 113px;"></span><%= check_box_tag "no_banner_image", checked_value = "n/a" %> N/A
         <%= f.file_field :banner_image  %>
      </div>
      <div class="form-group">
         <%= f.label :mission_title, "Mission Title" %>
         <%= f.text_field :mission_title, class: "form-control" %>
      </div>
