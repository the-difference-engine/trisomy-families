<% if @home_page_content.errors.any?%>
<div id="error_explanation" class="alert alert-danger" role="alert">
   <%= pluralize(@home_page_content.errors.count, "Error") %>
   <ul>
      <% @home_page_content.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
   </ul>
</div>
<% end %>
<div class="col-md-6 col-md-offset-3">
   <h1 class="text-center">Edit Home Page Content</h1>
   <%= form_for @home_page_content, url: {action: "update"} do |f| %>
      <h5 style="color:gray">Basic Info</h5>
      <div class="form-group">
         <%= f.label :banner_title, "Banner Title" %>
         <%= f.text_field :banner_title, class: "form-control" %>
      </div>
