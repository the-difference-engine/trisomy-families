<header class="header fixed clearfix">

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
        <!-- header-left start -->
        <!-- ================ -->
        <div class="header-left clearfix" style="padding-top:45px;">

          <!-- logo -->
          <div id="logo" class="logo">
            <a href="/"><img id="logo_img" class="img-responsive" src="/template/images/TrisomyFamilies_Logo.jpg" alt="The Project"></a>
          </div>

          <!-- name-and-slogan -->
          <!-- <div class="site-slogan">
            Multipurpose HTML5 Template
          </div> -->

        </div>
        <!-- header-left end -->

      </div>
      <div class="col-md-8 slide-show-container">
        <%= render '/partials/slide-show' %>
      </div>
      <div class="col-md-2">
        <div style="padding-top:30px;" class="header-right clearfix">
        <!-- Devise logout / login links !-->
        <% if user_signed_in? %>
          <h3 align="center"><%= link_to('Create Profile', profile_new_path) %></h3>
          <h3 align="center"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></h3>
        <% else %>
          <h3 align="center"><%= link_to('Login', new_user_session_path)  %></h3>
          <h3 align="center"><%= link_to('Sign up', new_user_registration_path ) %></h3>
        <% end %>
        <!-- main-navigation start -->
        <!-- classes: -->
        <!-- "onclick": Makes the dropdowns open on click, this the default bootstrap behavior e.g. class="main-navigation onclick" -->
        <!-- "animated": Enables animations on dropdowns opening e.g. class="main-navigation animated" -->
        <!-- "with-dropdown-buttons": Mandatory class that adds extra space, to the main navigation, for the search and cart dropdowns -->
        </div>
      </div>
    </div>
    <div class="row">
      <div clss="col-xs-12">
        <div class="main-navigation  animated with-dropdown-buttons">
          <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">

              <!-- Toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>

              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <!-- main-menu -->
                <ul class="nav navbar-nav ">
                  <li>
                    <a href="#">Awareness Ribbons</a>
                  </li>
                  <li>
                    <a href="#">Get Involved</a>
                  </li>
                  <!-- mega-menu end -->
                  <li>
                    <a href="/calendar">Calendar</a>
                  </li>
                  <li>
                    <a href="#">Trisomy Store</a>
                  </li>
                  <li>
                    <a href="/family-dashboard">Family Dashboard</a>
                  </li>
                </ul>
                <!-- main-menu end -->

                <!-- header dropdown buttons -->
                <!-- <div class="header-dropdown-buttons">
                  <a href="#" class="btn btn-sm hidden-xs btn-default">Apointment <i class="fa fa-hospital-o pl-5"></i></a>
                  <a href="#" class="btn btn-lg visible-xs btn-block btn-default">Make an Apointment <i class="fa fa-hospital-o pl-5"></i></a>
                </div> -->
                <!-- header dropdown buttons end-->

              </div>

            </div>
          </nav>
          <!-- navbar end -->

        </div>
      </div>
    </div>
  </div>

</header>
