<!-- add class="fixed" if necesary !-->
<header class="header clearfix">

  <div class="container-fluid">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href = '/'><p class="navbar-brand">Trisomy Families</p></a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              
            <% unless current_user.user_type == "physician" || current_user.family_ids == [] %>
              <li><a href="/families/<%= current_user.family_ids[0] %>"><i class="fa fa-tachometer fa-fw" aria-hidden="true"></i>&nbsp; Family</a></li>
            <% end %>


              <li><a href="/family-center"><i class="fa fa-users fa-fw" aria-hidden="true"></i>&nbsp;Find Families and Doctors</a></li>
              <li><a href="/calendar"><i class="fa fa-calendar fa-fw" aria-hidden="true"></i>&nbsp; Calendar</a></li>
              <% if current_user %>
                <% if current_user.user_type == 'admin' %>
                  <li><a href="/professional-center"><i class="fa fa-bar-chart fa-fw" aria-hidden="true"></i>&nbsp; Professional Center</a></li>
                <% elsif current_user.user_type == 'doctor' %>
                  <li><a href="/professional-center"><i class="fa fa-bar-chart fa-fw" aria-hidden="true"></i>&nbsp; Professional Center</a></li>
                <% end %>
              <% end %>
              <% if current_user %>
                <% if current_user.user_type == 'admin' %>
                  <li><a href="/admin-dashboard"><i class="fa fa-tachometer fa-fw" aria-hidden="true"></i>&nbsp; Admin Dashboard</a></li>
                <% end %>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello, <%= current_user.first_name %></a>
              <ul class="dropdown-menu">
                <li><a href="#">My Account</a></li>
                <li><a href="#">Settings</a></li>
                <li role="separator" class="divider"></li>
                <% if user_signed_in? %>
                <li><%= link_to('Signout', destroy_user_session_path, :method => :delete) %></li>
                <% end %>
              </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
</header>
