<h1><%= @family.family_name %></h1>
<ul>
  <li>Story: <%= @family.story %></li>
  <li>City: <%= @family.city %> </li>
  <li>State: <%= @family.state %> </li>
</ul>
<% if @family.children.count == 1 %>
  <h2>Child:</h2>
  <% @family.children.each do |child| %>
    <h4><%= child.nickname %></h4>
  <% end %>
<% elsif @family.children.count > 1 %>
  <h2>Children:</h2>
  <% @family.children.each do |child| %>
    <h4><a href = "/profile/<%= child.id %>"><%= child.nickname %></a></h4>
    <a href="/profile/<%= child.id %>">
  <% end %>
<% end %>
