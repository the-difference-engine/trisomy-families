<h2>Background History:</h2>

<%= form_tag "/profile/#{@child.id}/background", method: :post do %>
  <h3>Participant Measurements</h3>
    <h4>Weight Info:</h4>
      <div>
        <%= label_tag :weight_at_birth %>
        <%= number_field_tag(:weight_at_birth, nil, in: 1.0..20, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :one_month %>
        <%= number_field_tag(:one_month, nil, in: 1.0..20, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :two_month %>
        <%= number_field_tag(:two_month, nil, in: 1.0..20, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :three_month %>
        <%= number_field_tag(:three_month, nil, in: 1.0..20, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :four_month %>
        <%= number_field_tag(:four_month, nil, in: 1.0..20, step: 0.5)  %> 
      </div>
    <h4>Height Info:</h4>
      <div>
        <%= label_tag :height_at_birth %>
        <%= number_field_tag(:height_at_birth, nil, in: 10.0..30, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :one_month %>
        <%= number_field_tag(:height_one_month, nil, in: 10..30, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :two_month %>
        <%= number_field_tag(:height_two_month, nil, in: 10..30, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :three_month %>
        <%= number_field_tag(:height_three_month, nil, in: 10..30, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :four_month %>
        <%= number_field_tag(:height_four_month, nil, in: 10..30, step: 0.5)  %> 
      </div>
    <h4>Head Circumference Info:</h4>
      <div>
        <%= label_tag :head_circumference_at_birth %>
        <%= number_field_tag(:head_circumference_at_birth, nil, in: 10.0..30, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :one_month %>
        <%= number_field_tag(:hc_one_month, nil, in: 10..20, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :two_month %>
        <%= number_field_tag(:hc_two_month, nil, in: 10..20, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :three_month %>
        <%= number_field_tag(:hc_three_month, nil, in: 10..20, step: 0.5)  %> 
      </div>
      <div>
        <%= label_tag :four_month %>
        <%= number_field_tag(:hc_four_month, nil, in: 10..20, step: 0.5)  %> 
      </div>
  <h3>Birth Information</h3>
    <p>Mother Complications:</p>
      <div>
        <%= label_tag :gestational_diabetes %>
        <%= check_box_tag :gestational_diabetes %>
        <br>
        <%= label_tag 'pre-eclampsia' %>
        <%= check_box_tag :preeclampsia %>
        <br>
        <%= label_tag :clampsia %>
        <%= check_box_tag :clampsia %>
        <br>
        <%= label_tag :rh_factor %>
        <%= check_box_tag :rh_factor %>
        <br>
        <%= label_tag :separated_placenta %>
        <%= check_box_tag :separated_placenta %>
        <br>
        <%= label_tag :unsure %>
        <%= check_box_tag :unsure %>
        <br>
        <%= label_tag :extra_fluid %>
        <%= check_box_tag :extra_fluid %>
        <br>
        <%= label_tag :other_complications %>
        <%= text_field_tag :other_complications %>
      </div>
    <br>
      <div>
        <%= label_tag 'Delivery Method:' %>
        <%= select_tag( :delivery_method, options_for_select(delivery_method, " ")) %>
      </div>
    <br>
      <div>
      <p>Offered a c-section?</p>
        <%= label_tag :yes %>
        <%= radio_button_tag :offered_c_section, 'yes' %>
        <br>
        <%= label_tag :no %>
        <%= radio_button_tag :offered_c_section, 'no' %>
        <br>
        <%= label_tag :unsure %>
        <%= radio_button_tag :offered_c_section, 'unsure' %>
      </div>
    <br>
      <div>
        <p>Did the child have complications at birth?</p>
        <%= label_tag :yes %>
        <%= radio_button_tag :child_complications, 'yes' %>
        <br>
        <%= label_tag :no %>
        <%= radio_button_tag :child_complications, 'no' %>
        <br>
        <%= label_tag :unsure %>
        <%= radio_button_tag :child_complications, 'unsure' %>
      </div>
    <br>
      <div>
        <%= label_tag :apgar_scores %>
        <%= text_field_tag :apgar_scores %>
      </div>
      <div>
        <%= label_tag :gestation_age %>
        <%= number_field_tag :gestation_age, nil, in: 0..50, step: 1 %>
      </div>
      <div>
        <%= label_tag :mother_age_at_birth %>
        <%= number_field_tag :mother_age_at_birth, nil, in: 14..50, step: 1 %>
      </div>
      <div>
        <%= label_tag :father_age_at_birth %>
        <%= number_field_tag :father_age_at_birth, nil, in: 14..50, step: 1 %>
      </div>
      <div>
        <%= label_tag :multiple_birth %>
        <%= check_box_tag :multiple_birth %>
      </div>
      <div>
        <%= label_tag :multiple_birth_trisomy %>
        <%= check_box_tag :multiple_birth_trisomy %>
      </div>
      <h3>Participant Genetic History</h3>
      <div>
        <%= label_tag :siblings_with_trisomy %>
        <%= check_box_tag :siblings_with_trisomy %>
      </div>
      <div>
        <%= label_tag :trisomy_relative %>
        <%= check_box_tag :trisomy_relative %>
      </div>
  <%= submit_tag %>
<% end %>