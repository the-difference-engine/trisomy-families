<% if @resource.errors.any?%>
<div id="error_explanation" class="alert alert-danger" role="alert">
   <%= pluralize(@resource.errors.count, "Error") %>
   <ul>
      <% @resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
   </ul>
</div>
<% end %>
<div class="container">
   <div class="row">
      <div class="col-md-6 col-md-offset-3">
         <h1 class="text-center">Edit Resource</h1>
         <hr>
         <%= form_for @resource, url: {action: "update"}, html: { multipart: true } do |f| %>
         <h5 style="color:gray">Basic Info</h5>
         <div class="form-group">
            <%= f.label :name, "Name:" %>
            <%= f.text_field :name, class: "form-control", :value => @resource.name %>
         </div>
         <div class="form-group">
            <%= f.label :url, "URL:" %>
            <%= f.text_field :url, class: "form-control", :value => @resource.url %>
         </div>
         <div>
            <%= f.label :image, "Image URL:" %>
            <%= f.text_field :image, class: "form-control", :value => @resource.image %>
         </div>
         <br>
         <div class="form-group">
            <%= f.label :state, 'State' %>
            <%= f.select("state", options_for_select(us_states, @resource.state), prompt: "-", class: "form-control") %>
         </div>
         <br>
         <div class="form-group">
            <%= f.label :purpose, "Purpose" %>
            <%= f.text_field :purpose, class: "form-control", :value => @resource.purpose %>
         </div> 
         <hr>
         <div class="form-group">
            <%= f.label :description, 'Description:' %>
            <%= f.text_area :description, :value => @resource.description, class: "form-control", row: "3" %>
         </div>
         <hr>
         <div>
         </div>
         <%= submit_tag 'Update', class: "btn btn-success btn-lg btn-block"%>
      </div>
      <!-- col-md-6 -->
   </div>
   <!-- row -->
</div>
<!-- container -->
<% end %>